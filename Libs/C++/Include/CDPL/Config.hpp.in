/**
 * \file
 * \brief The header to include for \e %CDPL configuration information.
 */

#ifndef CDPL_CONFIG_HPP
#define CDPL_CONFIG_HPP

/**
 * \brief Defined if the <em>Cairo 2D Graphics Library</em> is available.
 */
#cmakedefine HAVE_CAIRO

/**
 * \brief Defined if \e Cairo PNG image output is available.
 */
#cmakedefine HAVE_CAIRO_PNG_SUPPORT

/**
 * \brief Defined if \e Cairo PostScript surfaces are available.
 */
#cmakedefine HAVE_CAIRO_PS_SUPPORT

/**
 * \brief Defined if \e Cairo PDF surfaces are available.
 */
#cmakedefine HAVE_CAIRO_PDF_SUPPORT

/**
 * \brief Defined if \e Cairo SVG surfaces are available.
 */
#cmakedefine HAVE_CAIRO_SVG_SUPPORT

/**	
 * \brief Defined if the \e Qt libraries are available.
 */
#cmakedefine HAVE_QT

/**	
 * \brief Defined if the \e SQLite3 library is available.
 */
#cmakedefine HAVE_SQLITE3

/**	
 * \brief Defined if the \e Boost filesystem library is available.
 */
#cmakedefine HAVE_BOOST_FILESYSTEM

/**	
 * \brief Defined if the \e Boost chrono library is available.
 */
#cmakedefine HAVE_BOOST_CHRONO

/**	
 * \brief Defined if the \e Boost timer library is available.
 */
#cmakedefine HAVE_BOOST_TIMER

/**	
 * \brief Defined if the \e Boost iostreams library is available.
 */
#cmakedefine HAVE_BOOST_IOSTREAMS

/**
 * \brief The size of <tt>long int</tt>.
 */
#define SIZEOF_LONG_INT @SIZEOF_LONG_INT@

#endif // CDPL_CONFIG_HPP
